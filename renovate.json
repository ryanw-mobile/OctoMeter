{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "commitMessagePrefix": "[chore] Renovate: ",
  "commitMessageExtra": "{{{currentValue}}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "assignAutomerge": false,
  "reviewers": [
    "ryanw-mobile"
  ],
  "assignees": [
    "ryanw-mobile"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "io.github.koalaplot:koalaplot-core"
      ],
      "enabled": false
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/androidx.compose.compiler:compiler/"
      ]
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/org.jetbrains.kotlin.*/"
      ]
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/com.google.devtools.ksp/"
      ]
    },
    {
      "allowedVersions": "1.*.*",
      "groupName": "compose",
      "matchPackageNames": [
        "/org.jetbrains.compose.*/"
      ]
    }
  ],
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "branch"
}
